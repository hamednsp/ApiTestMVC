
@{
    ViewData["Title"] = "Index";
}
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *,AuthoringTagHelpers
@model List<Salary>

<h1>Salary</h1>
<div>
    <a asp-action="Add" class="btn btn-primary"></a>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Name</th>
            <th>Operation</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Amount</td>
                <td>
                    <a style="color: white" class="btn btn-success" asp-action="Update" asp-route-id="@item.SalaryId">Update</a>
                    <a style="color: white" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.SalaryId">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

